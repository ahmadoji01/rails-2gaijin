<div class="card" onclick="location.href='<%= product_path(rproduct) %>';">
    <% if rproduct.status == :sold %>
        <div class="ribbon ribbon-top-left"><span>Sold Out</span></div>
    <% end %>
    <div class="product-item pb-3">
        <div class="product-image">
            <% if rproduct.product_images? %>
		<% if rproduct.product_images[0].image.present? %>
                    <%= image_tag rproduct.product_images[0].image.url(:thumb), alt: "image", style: "padding: 10px; object-fit: scale-down", class: "gaijin-img-square" %>
                <% else %>
		   <%= image_tag "products/product-1-50.png", alt: "image", style: "padding: 10px; object-fit: scale-down", class: "gaijin-img-square" %>
	        <% end %>
	    <% else %>
                <%= image_tag "products/product-1-50.png", alt: "image", style: "padding: 10px; object-fit: scale-down", class: "gaijin-img-square" %>
            <% end %>
        </div>
        <div class="product-details text-center rcard-text" style="height: 30px;">
            <div class="product-name" style="font-size: 1em; margin-left: 2px; margin-right: 2px"><%= rproduct.name %></div>
            <!-- <div class="text-muted text-small">Updated 3 mins ago</div> -->
        </div>
    </div>
</div>
