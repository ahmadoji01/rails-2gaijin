<a href="<%= product_path(rproduct) %>" class="card" style="text-decoration: none; margin-top: -2px; margin-bottom: -7px;">
    <% if rproduct.status == :sold %>
        <div class="ribbon ribbon-top-left"><span>Sold Out</span></div>
    <% end %>
    <div class="product-item pb-3">
        <div class="product-image" style="width: 100%; height: 85%;">
            <% if rproduct.product_images[0].image? %>
                <% if browser.device.mobile? %>
                    <%= image_tag rproduct.product_images[0].image.url(:thumb), alt: "image", style: "padding-top: 10px; padding-right: 5px; padding-left: 5px; object-fit: cover", class: "gaijin-img-square" %>
                <% else %>
                    <%= image_tag rproduct.product_images[0].image.url, alt: "image", style: "padding-top: 10px; padding-right: 5px; padding-left: 5px; object-fit: cover", class: "gaijin-img-square" %>
                <% end %>
            <% else %>
                <%= image_tag "products/product-1-50.png", alt: "image", style: "padding-top: 10px; padding-right: 5px; padding-left: 5px; object-fit: cover", class: "gaijin-img-square" %>
            <% end %>
        </div>
        <div class="product-details text-center rcard-text" style="height: auto;">
            <div class="product-name" style="font-size: 1.25em; margin-left: 2px; margin-right: 2px; text-align: center">
                <center>
                    <% if rproduct.price == 0 %>
                    免费
                    <% else %>
                        ¥<%= rproduct.price %>
                    <% end %>
                </center>
            </div>
            <!-- <div class="text-muted text-small">Updated 3 mins ago</div> -->
        </div>
    </div>
</a>