<div class="col-lg-3 col-md-3 col-sm-3 mx-auto" onclick="location.href='<%= product_path(product) %>';" style="width: 250px; height:100%">
    <div class="card">
        <% if product.status == :sold %>
            <div class="ribbon ribbon-top-left"><span>Sold Out</span></div>
        <% end %>
        <% if product.image? %>
            <%= image_tag product.image.url, class: "card-img-top", alt: "image", style: "width: 100%; height: 250px; object-fit: cover;" %>
        <% else %>
            <%= image_tag "products/product-1-50.png", class: "card-img-top", alt: "image", style: "width: 100%; height: 250px; object-fit: cover;" %>
        <% end %>
        
        <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text">&#165;<%= product.price %></p>
        </div>
    </div>
</div>