<div class="modal fade" id="Modal<%= a.id %>" tabindex="-1" role="dialog" aria-labelledby="<%= a.id %>ModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="<%= a.id %>ModalLabel">Shipping Address</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
              <div class="row">
                <%= form_with(model: a, local: true, class: "needs-validation") do |form| %>
                  <% if a.errors.any? %>
                    <div id="error_explanation">
                        <h2><%= pluralize(a.errors.count, "error") %> prohibited this address from being saved:</h2>

                        <ul>
                        <% a.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                        </ul>
                    </div>
                  <% end %>

                  <div class="col-md-12 mb-3">
                    <div class="form-group form-inline">
                      <%= form.label :full_address %>
                      <%= form.text_field :full_address, class: "form-control", style: 'width: 100%', required: true %>
                      <div class="invalid-feedback">
                        Valid full address is required.
                      </div>
                    </div>
                  </div>
                  <div class="col-md-12 mb-3">
                    <div class="form-group form-inline">
                      <%= form.label :apartment %>
                      <%= form.text_field :apartment, class: "form-control", style: 'width: 100%', required: true %>
                      <div class="invalid-feedback">
                        Valid apartment is required.
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-5 mb-3">
                      <%= form.label :state %>
                      <%= form.select :state, options_for_select(['Hokkaido'], selected: a.state), {}, { class: "custom-select d-block w-100", required: true } %>
                    </div>
                    <div class="col-md-4 mb-3">
                      <%= form.label :city %>
                      <%= form.select :city, options_for_select([['Sapporo'], ['Eniwa']], selected: a.city), {}, { class: "custom-select d-block w-100", required: true } %>
                    </div>
                    <div class="col-md-3 mb-3">
                      <%= form.label :postal_code %>
                      <%= form.text_field :postal_code, class: "form-control", required: true %>                  
                    </div>
                  </div>
                <div class="card-footer text-left">
                    <%= form.button "Save", type: :submit, class: "btn btn-lg btn-primary" %>
                </div>
          </div>   
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>