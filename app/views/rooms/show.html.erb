<div class="main-content" style="width: 100%;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h3>Messages</h3>
                    </div>
                    <div class="card-body">
                        <div class="messaging">
                            <div class="inbox_msg">
                                <div class="inbox_people">
                                    <div class="headind_srch">
                                        <div class="recent_heading">
                                            <h4>Recent Messages</h4>
                                        </div>
                                        <div class="srch_bar">
                                            <div class="stylish-input-group">
                                                <input type="text" class="search-bar" placeholder="Search">
                                                <span class="input-group-addon">
                                            <button type="button"> <i class="fa fa-search" aria-hidden="true"></i> </button>
                                        </span> </div>
                                        </div>
                                    </div>
                                    <%= render partial: 'rooms' %>
                                </div>
                                <div class="mesgs">
                                    <div class="msg_history">
                                        <% @room_messages.each do |room_message| %>
                                            <div class="incoming_msg">
                                                <div class="incoming_msg_img"> <%= image_tag "avatar/avatar-1.png", class: "rounded-circle" %> </div>
                                                <div class="received_msg">
                                                    <div class="received_withd_msg">
                                                        <p><%= room_message.message %></p>
                                                        <span class="time_date"><%= room_message.created_at.strftime("%I:%M %p") %></span></div>
                                                </div>
                                            </div>
                                        <% end %>
                                        <!-- <div class="outgoing_msg">
                                            <div class="sent_msg">
                                                <p>Lorem ipsum dolor sit amet</p>
                                                <span class="time_date"> 10:00 AM    |    Today</span> </div>
                                        </div> -->
                                    </div>
                                    <div class="type_msg">
                                        <%= form_for @room_message, remote: true do |form| %>
                                            <div class="input_msg_write">
                                                <%= form.text_field :message, class: "write_msg", placeholder: "Type a message" %>
                                                <%= form.button :submit, class: "msg_send_btn" do %>
                                                    <i class="fa fa-paper-plane"></i>
                                                <% end %>
                                                <%= form.hidden_field :room_id %>
                                            </div>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
