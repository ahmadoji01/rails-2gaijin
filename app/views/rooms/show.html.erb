<div class="main-content" style="width: 100%;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="messaging">
                            <div class="inbox_msg">
                                <div class="inbox_people col-lg-6 d-none d-lg-block">
                                    <div class="headind_srch">
                                        <div class="recent_heading">
                                            <h4>Recent Messages</h4>
                                        </div>
                                    </div>
                                    <%= render partial: 'rooms' %>
                                </div>
                                <div class="mesgs col-lg-6 col-md-12 col-sm-12">
                                    <div class="card" style="padding: 30px;">
                                        <div class="chat_people">
                                            <%  if @room.room_type == :private
                                                @room.user_ids.each do |user|
                                                    if current_user.id != user
                                                        @thisroomuser = User.find(user) 
                                                        @thisroomname = @thisroomuser.first_name
                                                        if @thisroomuser.online
                                                            @onlinestatus = "Online Now"
                                                        else
                                                            @onlinestatus = "Offline"
                                                        end
                                                    end
                                                end
                                            else
                                                @thisroomname = room.name
                                                @thisroomuser = room.users.first
                                            end %>
                                            <div class="chat_img"><%= image_tag another_user_avatar(@thisroomuser), class: "rounded-circle" %> </div>
                                            <div class="chat_ib">
                                                <h5>
                                                    <%= @thisroomname %>
                                                    <% if @thisroomuser.online %>
                                                        <div id="active-status-div" class="text-success text-small font-600-bold" style="float: right;">
                                                            <i class="fas fa-circle"></i><span id="active-status-msg" style="margin-left: 2px;"><%= @onlinestatus %></span>
                                                        </div>
                                                    <% else %>
                                                        <div id="active-status-div" class="text-small font-600-bold text-muted" style="float: right;">
                                                            <i class="fas fa-circle"></i><span id="active-status-msg" style="margin-left: 2px;"><%= @onlinestatus %></span>
                                                        </div>
                                                    <% end %>
                                                </h5>
                                                <small class="active_msg_time"><%= @room.last_active %></small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="msg_history" data-channel-subscribe="room" data-room-id="<%= @room.id %>" data-user-id="<%= current_user.id %>" data-another-user-id="<%= @thisroomuser.id %>" style="padding-left: 15px; padding-right: 15px;">
                                        <% @room_messages.each do |room_message| %>
                                            <% if current_user != room_message.user %>
                                                <div class="incoming_msg">
                                                    <div class="incoming_msg_img"> <%= image_tag another_user_avatar(room_message.user), class: "rounded-circle" %> </div>
                                                    <div class="received_msg">
                                                        <div class="received_withd_msg">
                                                            <p style="text-decoration: none"><%= room_message.message.html_safe %></p>
                                                            <span class="time_date"><%= room_message.created_at %></span></div>
                                                    </div>
                                                </div>
                                            <% else %>
                                                <div class="outgoing_msg">
                                                    <div class="sent_msg">
                                                        <p style="color: #ffffff; text-decoration: none"><%= room_message.message.html_safe %></p>
                                                        <span class="time_date"><%= room_message.created_at %></span> 
                                                    </div>
                                                </div>
                                            <% end %>
                                        <% end %>
                                    </div>
                                    <div class="type_msg">
                                        <%= form_for @room_message, remote: true do |form| %>
                                            <div class="input_msg_write">
                                                <%= form.text_field :message, class: "write_msg", placeholder: "Type a message" %>
                                                <%= button_tag type: "submit", class: "msg_send_btn" do %>
                                                    <i class="fa fa-paper-plane"></i>
                                                <% end %>
                                                <%= form.hidden_field :room_id %>
                                            </div>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-none" data-role="message-template">
    <div class="incoming_msg">
        <div class="incoming_msg_img">
            <img src="" class="rounded-circle" data-role="user-avatar"> 
        </div>
        <div class="received_msg">
            <div class="received_withd_msg">
                <p data-role="message-text"></p>
                <span class="time_date" data-role="message-date"></span>
            </div>
        </div>
    </div>
</div>

<div class="d-none" data-role="outgoing-message-template">
    <div class="outgoing_msg">
        <div class="sent_msg">
            <p data-role="outgoing-message-text"></p>
            <span class="time_date" data-role="outgoing-message-date"></span> 
        </div>
    </div>
</div>
