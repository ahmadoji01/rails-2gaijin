<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<div class="container">
  <div class="row">
    <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
      <div class="login-brand">
        <%= image_tag "2gaijinheader-1.png", width: "200", alt: "logo" %>
      </div>

      <div class="card card-primary">
        <div class="card-header"><h4>Register</h4></div>

        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>
            <div class="row">
              <div class="form-group col-6">
                <%= f.label :first_name %>
                <%= f.text_field :first_name, autocomplete: "first-name", class: "form-control", autofocus: true, required: true %>
              </div>
              <div class="form-group col-6">
                <%= f.label :last_name %>
                <%= f.text_field :last_name, autocomplete: "last-name", class: "form-control", autofocus: true, required: true %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
              <div class="invalid-feedback">
              </div>
            </div>

            <div class="row">
              <div class="form-group col-6">
                <%= f.label :password, class: "d-block" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control pwstrength", :"data-indicator" => "pwindicator", required: true %>
                <div id="pwindicator" class="pwindicator">
                  <div class="bar"></div>
                  <div class="label"></div>
                </div>
              </div>
              <div class="form-group col-6">
                <%= f.label :password_confirmation, class: "d-block" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
              </div>
            </div>

            <!-- 
            <div class="form-divider">
              Your Address
            </div>
            <div class="row">
              <div class="form-group col-12">
                <label>Prefecture</label>
                <select class="form-control selectric">
                  <option>Hokkaido</option>
                  <option>Kansai</option>
                </select>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-6">
                <label>City</label>
                <input type="text" class="form-control">
              </div>
              <div class="form-group col-6">
                <label>Postal Code</label>
                <input type="text" class="form-control">
              </div>
            </div>
            <div class="row">
              <div class="form-group col-12">
                <label>Address</label>
                <input type="text" class="form-control">
              </div>
            </div>

            <div class="form-group">
              <div class="custom-control custom-checkbox">
                <input type="checkbox" name="agree" class="custom-control-input" id="agree">
                <label class="custom-control-label" for="agree">I agree with the terms and conditions</label>
              </div>
            </div>
          -->
            <div class="form-group text-center">
              <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
            </div>

            <div class="text-muted text-center">
              Already have an account?
              <%- if controller_name != 'sessions' %>
                <%= link_to "Log in", new_session_path(resource_name) %><br />
              <% end %> 
            </div>

          <% end %>
        </div>
      </div>
      <div class="simple-footer">
        Copyright &copy; 2gaijin 2019
      </div>
    </div>
  </div>
</div>

