<div class="tab-pane active" id="shipping-address" role="tabpanel" aria-labelledby="shipping-address">
    <div class="mb-2">
        <%= link_to new_jobs_application_path do %>
            <button class="btn btn-primary btn-lg btn-icon icon-left"><i class="fa fa-plus"></i> Apply for a Job</button>
        <% end %>
    </div>
    <hr>
    <div class="col-12 table-responsive">
        <table class="table">
            <thead style="color: none;">
                <tr>
                    <!-- <th scope="col">Product's Name</th> -->
                    <th class="text-center" width="300px">Job Type</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                <% @jobapps.each do |jobapp| %>
                    <tr>
                        <td><p><%= jobapp.jobtype %></p></td>
                        <td>
                            <center>
                                <button class="btn btn-outline-primary btn-icon icon-left" data-toggle="modal" data-target="#Modal<%= jobapp.id %>"><i class="fa fa-edit"></i> Edit</button>
                                <%= link_to jobapp, method: :delete, data: { confirm: 'Are you sure?' } do %>
                                    <button class="btn btn-outline-danger btn-icon icon-left"><i class="fa fa-trash"></i> Delete</button>
                                <% end %>
                            </center>
                        </td>
                    </tr>
                    <%= render 'jobs_applications/job_app_modal', a: jobapp %>
                <% end %>
            </tbody>
        </table>
    </div>                                
</div>