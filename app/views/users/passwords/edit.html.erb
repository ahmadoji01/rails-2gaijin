<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<div class="container">
    <div class="row">
        <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
        <div class="login-brand">
          <%= image_tag "2gaijinheader-1.png", width: "200", alt: "logo" %>
        </div>

        <div class="card card-primary">
          <div class="card-header"><h4>Change your password</h4></div>

          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "users/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>

              <div class="form-group">
                <%= f.label :password, "New password" %><br />
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", tabindex: "1" %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, "Confirm new password" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", tabindex: "1" %>
              </div>

              <div class="actions">
                <%= f.submit "Change my password", class: "btn btn-primary btn-lg btn-block", tabindex: "4" %>
              </div>
            <% end %>

          
      </div>

    </div>
    <div class="simple-footer">
      Copyright &copy; 2gaijin 2019
    </div>
</div>