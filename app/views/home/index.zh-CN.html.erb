<% title "Secondhand Items Platform" %>
<% description "Secondhand Items Main Page." %>
<% keywords "Main, Items, Secondhand, Cheap" %>

<div id="carouselExampleIndicators" class="carousel slide mb-n5" data-ride="carousel" style="position: relative; margin-top: 70px;">
    <div class="carousel-inner">
        <a href="#" data-toggle="modal" data-target="#deliveryModal" class="carousel-item active">
            <%= image_tag "banner/delivery1.png", class: "w-100", alt: "Delivery Promo" %>
        </a>
        <a href="<%= new_product_path %>" class="carousel-item" onclick="<%= new_product_path %>">
            <%= image_tag "cover2.jpg", class: "w-100", alt: "Item Promo" %>
        </a>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">上一页</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">下一页</span>
    </a>
</div>
<div class="row" style="position: relative; margin-top: 48px; margin-right: 0px; margin-left:0px;">
    <span style="position: absolute; right: 28px; bottom: 14px; z-index: 10;">
        <%= link_to search_page_path(:sortby => 3, :status => 1), style: "color: white" do %>
            查看更多 <i class="fas fa-chevron-right"></i>
        <% end %>
    </span>
    <div class="card" style="margin-bottom: 0px;">
        <div class="card-body" style="background-color: #F17022; padding-top: 10px; padding-bottom: 10px;">
            <div class="card-title text-center" style="margin-bottom: 0px;">
                <%= link_to search_page_path(:sortby => 3, :status => 1), style: "color: white" do %>
                    <h4 style="color: white; margin: 0px;">最近添加的商品</h4>
                <% end %>
            </div>
            <div class="owl-carousel owl-theme" id="home-products-carousel">
                <% if @recentproducts.count > 0 %>
                    <% @recentproducts.each do |rproduct| %>
                        <%= render 'common/rproduct_price_card', rproduct: rproduct %>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>
<div class="main-content mt-n5" style="width: 100%; padding-top: 70px;">
    <div class="container-fluid">
        <div class="row d-none d-md-block">
            <div class="col-lg-12 col-md-12 col-sm-12" style="padding-left: 50px; padding-right: 50px;">
                <h2><center>电子用品</center></h2>
                <span style="position: absolute; right: 50px; top: 10px;"><%= link_to search_page_path(:categoryname => "电子用品", :sortby => 3) do %>
                    <h4>查看更多 <i class="fas fa-chevron-right"></i></h4>
                <% end %></span>
                <div class="row">
                    <% if @electronics.count > 0 %>
                        <% @electronics.each do |product| %>
                            <%= render 'common/product_card', product: product %>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="row d-md-none pl-3 pr-3">
            <div class="card shadow pt-3 col-lg-12 col-md-12 col-sm-12">
                <h5 style="margin-top: 10px; text-align: left;">电子用品</h2>
                <span style="position: absolute; right: 15px; top: 30px;"><%= link_to search_page_path(:categoryname => "电子用品", :sortby => 3) do %>
                    查看更多 <i class="fas fa-chevron-right"></i>
                <% end %></span>
                <hr>
                <div class="row" style="display: flex; overflow-x: auto; overflow-y: hidden; flex-wrap: nowrap; margin-left: 0px; margin-right: 0px;">
                    <% if @electronics.count > 0 %>
                        <% @electronics.each do |product| %>
                            <%= render 'common/sm_product_card', product: product %>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
