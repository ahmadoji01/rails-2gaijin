                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
        <% if user_signed_in? %>
            <span id="signed-in-token" class="d-none">Signed In</span>
        <% else %>
            <span id="signed-in-token" class="d-none"><%= new_user_session_path %></span>
        <% end %>
    </div>
</div>