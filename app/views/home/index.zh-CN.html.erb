                    <% end %>
                </div>
            </div>
        </div>
        <div class="row d-md-none pl-3 pr-3">
            <div class="card shadow pt-3 col-lg-12 col-md-12 col-sm-12">
                <h5 style="margin-top: 10px; text-align: left;">家具</h2>
                <span style="position: absolute; right: 15px; top: 30px;"><%= link_to search_page_path(:categoryname => "家具", :sortby => 3) do %>
                    查看更多 <i class="fas fa-chevron-right"></i>
                <% end %></span>
                <hr>
                <div class="row" style="display: flex; overflow-x: auto; flex-wrap: nowrap; margin-left: 0px; margin-right: 0px;">
                    <% if @furnitures.count > 0 %>
                        <% @furnitures.each do |product| %>
                            <%= render 'common/sm_product_card', product: product %>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="row d-none d-md-block">
            <div class="col-lg-12 col-md-12 col-sm-12" style="padding-left: 50px; padding-right: 50px;">
                <h2><center>厨房</center></h2>
                <span style="position: absolute; right: 50px; top: 10px;"><%= link_to search_page_path(:categoryname => "厨房", :sortby => 3) do %>
                    <h4>查看更多 <i class="fas fa-chevron-right"></i></h4>
                <% end %></span>
                <div class="row">
                    <% if @kitchens.count > 0 %>
                        <% @kitchens.each do |product| %>
                            <%= render 'common/product_card', product: product %>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="row d-md-none pl-3 pr-3">
            <div class="card shadow pt-3 col-lg-12 col-md-12 col-sm-12">
                <h5 style="margin-top: 10px; text-align: left;">厨房</h2>
                <span style="position: absolute; right: 15px; top: 30px;"><%= link_to search_page_path(:categoryname => "厨房", :sortby => 3) do %>
                    查看更多 <i class="fas fa-chevron-right"></i>
                <% end %></span>
                <hr>
                <div class="row" style="display: flex; overflow-x: auto; flex-wrap: nowrap; margin-left: 0px; margin-right: 0px;">
                    <% if @kitchens.count > 0 %>
                        <% @kitchens.each do |product| %>
