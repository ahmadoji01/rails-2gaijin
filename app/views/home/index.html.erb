<% title "Secondhand Items Platform" %>
<% description "Sell your secondhand items with our website. You can also buy cheap electronics, kitchen appliances, furnitures, and many cheap secondhand items. We can help you deliver items around Hokkaido, Japan" %>
<% keywords "Main, Items, Secondhand, Cheap, Delivery, Sell, Buy, Sapporo, Hokkaido, Japan, Gaijin" %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
<%= javascript_include_tag 'sub/owl' %>

<div id="carouselExampleIndicators" class="carousel slide mb-n5" data-ride="carousel" style="position: relative; margin-top: 70px;">
    <div class="carousel-inner">
        <a href="#" data-toggle="modal" data-target="#deliveryModal" class="carousel-item active">
            <%= image_tag "banner/delivery1.png", class: "w-100", alt: "Delivery Promo" %>
        </a>
        <a href="<%= new_product_path %>" class="carousel-item" onclick="<%= new_product_path %>">
            <%= image_tag "cover2.jpg", class: "w-100", alt: "Item Promo" %>
        </a>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row" style="position: relative; margin-top: 48px; margin-right: 0px; margin-left:0px;">
    <span style="position: absolute; right: 28px; bottom: 14px; z-index: 10;">
        <%= link_to search_page_path(:sortby => 3, :status => 1), style: "color: white" do %>
            See More <i class="fas fa-chevron-right"></i>
        <% end %>
    </span>
    <div class="card" style="margin-bottom: 0px;">
        <div class="card-body" style="background-color: #F17022; padding-top: 10px; padding-bottom: 10px;">
            <div class="card-title text-center" style="margin-bottom: 0px;">
                <%= link_to search_page_path(:sortby => 3, :status => 1), style: "color: white" do %>
                    <h4 style="color: white; margin: 0px;">Recently Added Items</h4>
                <% end %>
            </div>
            <div class="owl-carousel owl-theme" id="home-products-carousel">
                <% if @recentproducts.count > 0 %>
                    <% @recentproducts.each do |rproduct| %>
                        <%= render 'common/rproduct_price_card', rproduct: rproduct %>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>
<div class="main-content mt-n5" style="width: 100%; padding-top: 70px;">
    <div class="container-fluid">
        <% if !browser.device.mobile? %>
            <div class="row d-none d-md-block" style="padding-left: 100px; padding-right: 100px;">
