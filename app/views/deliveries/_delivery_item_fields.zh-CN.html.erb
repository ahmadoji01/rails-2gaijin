<div class="nested-fields">
	<div class="mb-3">
		<%= f.text_field :name, class: "form-control", placeholder: "项目名称", required: true %>
	</div>
	<div class="mb-3">
		<%= f.text_field :address, id: "item-loc-input", class: "form-control", placeholder: "位置" %>
	</div>
	<div style="margin-bottom: 20px;">
		<%= link_to_remove_association f, style: "color: #fff;" do %>
			<button class="btn btn-primary" style="width: 110px">删除</button>
		<% end %>
	</div>
</div>