<div class="nested-fields">
	<div class="mb-3">
		<%= f.text_field :name, class: "form-control", placeholder: "Item Name", required: true %>
	</div>
	<div class="mb-3">
		<div style="position:relative;">
			<div class="input-group">
				<%= f.text_field :address, id: "item-loc-input", class: "form-control", placeholder: "Location (Click the Right Icon to Autolocate)" %>
				<div class="input-group-prepend" id="item-autolocate">
	                <div class="input-group-text">
	                    <i class="fas fa-search-location fa-lg"></i>
	                </div>
	            </div>
        	</div>
		</div>
	</div>
	<div style="margin-bottom: 20px;">
		<%= link_to_remove_association f, style: "color: #fff;" do %>
			<button class="btn btn-danger" style="width: 120px">Remove</button>
		<% end %>
	</div>
</div>