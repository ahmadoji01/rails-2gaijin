<div class="nested-fields">
	<div class="mb-3">
		<%= f.text_field :name, class: "form-control", placeholder: "Item Name", required: true %>
	</div>
	<div class="mb-3">
		<%= f.text_field :address, id: "item-loc-input", class: "form-control", placeholder: "Location" %>
	</div>
	<div style="margin-bottom: 20px;">
		<%= link_to_remove_association f, style: "color: #fff;" do %>
			<button class="btn btn-primary">Remove Item</button>
		<% end %>
	</div>
</div>