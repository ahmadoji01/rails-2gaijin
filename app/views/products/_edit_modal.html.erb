<div class="modal fade" id="Modal<%= p.id %>" tabindex="-1" role="dialog" aria-labelledby="<%= p.id %>ModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="<%= p.id %>ModalLabel">Edit Product</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
              <div class="row">
                <%= form_with(model: p, local: true, class: "needs-validation") do |form| %>
                  <% if p.errors.any? %>
                    <div id="error_explanation">
                        <h2><%= pluralize(p.errors.count, "error") %> prohibited this product from being saved:</h2>

                        <ul>
                        <% p.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                        </ul>
                    </div>
                  <% end %>

                  <div class="col-md-6 mb-3">
                    <div class="form-group form-inline">
                      <%= form.label :name %>
                      <%= form.text_field :name, class: "form-control", required: true %>
                      <div class="invalid-feedback">
                        Valid first name is required.
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6 mb-3">
                    <div class="form-group form-inline">
                      <%= form.label :categories, style: "width: 100px;" %>
                      <%= form.select :categories, options_from_collection_for_select(Category.all, "id", "name", {:selected => p.category_ids}), {}, { multiple: true, class: "multiselect2" } %>
                      <div class="invalid-feedback">
                        Valid category is required.
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6 mb-3">
                    <div class="form-group form-inline">
                      <%= form.label :price %>
                      <%= form.number_field :price, class: "form-control" %>
                      <div class="invalid-feedback">
                        Valid category is required.
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6 mb-3">
                    <div class="form-group form-inline">
                      <%= form.label :description %>
                      <%= form.text_area :description, class: "form-control" %>
                      <div class="invalid-feedback">
                        Valid category is required.
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6 mb-3">
                    <div class="form-group form-inline">
                      <%= form.label :image %> 
                      <%= form.file_field :image, class: "form-control" %>
                      <div class="invalid-feedback">
                        Valid category is required.
                      </div>
                    </div>
                  </div>
                <div class="card-footer text-left">
                    <%= form.submit "Save", class: "btn btn-lg btn-primary" %>
                </div>
          </div>
          
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>