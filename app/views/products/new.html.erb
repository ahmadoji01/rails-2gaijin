<div class="main-content" style="width: 100%;">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header"><h4>Sell Something</h4></div>
                    <div class="card-body">
                    	<%= form_with(model: @product, local: true, class: "needs-validation") do |form| %>
						  	<% if @product.errors.any? %>
							    <div id="error_explanation">
							      	<h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
							      	<ul>
							      	<% @product.errors.full_messages.each do |message| %>
							        	<li><%= message %></li>
							      	<% end %>
							      	</ul>
							    </div>
						  	<% end %>

                            <div class="row">
                                <div class="form-group form-inline">
                                	<%= form.label :name, style: "width: 190px" %>
    								<%= form.text_field :name, class: "form-control", style: "width: 300px" %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group form-inline">
                                    <label style="width: 190px;">Categories</label>
                                    <%= select_tag :categories, options_from_collection_for_select(@categories, "id", "name"), { multiple: true, id: "select2", class: "form-control", style: "width: 300px;" } %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group form-inline">
                                    <%= form.label :price, style: "width: 190px", min: 0 %>
    								<%= form.number_field :price, class: "form-control", style: "width: 300px" %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group form-inline">
                                	<%= form.label :description, style: "width: 190px" %>
    								<%= form.text_area :description, class: "form-control", style: "width: 300px" %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group form-inline"> <!--custom-file-->
                                	<%= form.label :image, style: "width: 190px" %> 
                                	<%= form.file_field :image, class: "form-control" %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group form-inline"> <!--custom-file-->
                                    <label style="width: 190px;">Location</label> 
                                    <input type="text" id="pac-input" class="form-control" style="width: 300px;">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group form-inline">
                                    <label style="width: 190px;">Map</label>
                                    <div id="product-map" style="width: 300px; height: 200px;"></div>
                                </div>
                                <%= form.hidden_field :latitude, id: "address-lat-2" %>
                                <%= form.hidden_field :longitude, id: "address-long-2" %>
                            </div>
	                        <div class="card-footer text-left">
	                            <%= form.submit "Save", class: "btn btn-lg btn-primary" %>
	                        </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
