<div class="main-content" style="width: 100%;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <center><h3>Advanced Search</h3></center>
                    </div>
                    <div class="card-body">
                    	<%= form_tag search_page_path, method: :get do %>
